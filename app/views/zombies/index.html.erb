<style>
    .Titulo{        
        text-align:center;
    }
    .Botones{
        text-align:center;
    }
    img{
        width: 50px;
        height: 50px;
    }
</style>


<p id="notice"><%= notice %></p>

<h1>Zombies</h1>

<table>
  <thead>
    <tr>
        <th class="Titulo">Avatar</th>
      <th class="Titulo">Nombre</th>
      <th class="Titulo">Bio</th>
      <th class="Titulo">Edad</th>
      <th class="Titulo">E-mail</th>
      <th class="Titulo">Podrido</th>
      <th colspan="3" class="Titulo">Opciones</th>
    </tr>
  </thead>

  <tbody>
      <% @zombies.each do |zombie| %>
      <!--<#% @rotten_zombies.each do |zombie| %>-->
      <tr>
          <td>
            
            <%= image_tag(zombie.avatar_url) if zombie.avatar? %>
            
           <!--
              <#%= image_tag(zombie.avatar_url) if zombie.avatar? %>
              <#%= zombie.file_field :avatar %>
              <#%= zombie.hidden_field :avatar_cache %>
            -->

          </td>
        <td><%= zombie.name %></td>
        <td><%= zombie.bio %></td>
        <td><%= zombie.age %></td>
        <td><%= zombie.email %></td>
        <!--<td><%= zombie.rooten %></td>-->
        <td><%= zombie.rooten ? "Sí" : "No" %></td>
        
        <td class="Botones"><%= link_to '<button class="button">Mostrar</button>'.html_safe, zombie %></td>
        <td class="Botones"><%= link_to '<button class="button success"> Editar </button>'.html_safe, edit_zombie_path(zombie) %></td>
        <td class="Botones"><%= link_to '<button class="button alert">¡Destruir!</button>'.html_safe, zombie, method: :delete, data: { confirm: 'Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


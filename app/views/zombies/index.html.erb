<p id="notice"><%= notice %></p>

<h1>Zombies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Bio</th>
      <th>Age</th>
      <th>Email</th>
      <th>Rooten</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooten_zombies.each do |zombie| %>
      <tr>
        <td><%= zombie.name %></td>
        <td><%= zombie.bio %></td>
        <td><%= zombie.age %></td>
        <td><%= zombie.email %></td>
        <td><%= zombie.rooten ? "yes" : "no" %></td>
        <td><%= link_to 'Show', zombie ,class:'button primary'%></td>
        <td><%= link_to 'Edit', edit_zombie_path(zombie), class:'button success' %></td>
        <td><%= link_to 'Destroy', zombie, method: :delete, data: { confirm: 'Are you sure?' }, class:'button alert' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div id="brains">
    <%= render :partial => @zombie.brains.reverse %>
</div>

<div>
    <h5>Agrega cerebro al zombie</h5>
</div>

<%= form_for([@zombie, Brain.new], remote: true) do |f| %>
 
<div class="row">
 
  <div class="medium-6 columns">
    <%= f.label :flavor %>
    <%= f.text_field :flavor %>
  </div>
  
  <div class="medium-6 columns">
    <%= f.label :iq %>
    <%= f.number_field :iq %>
  </div>
  
  <div class="medium-6 columns">
    <%= f.label :fresh %>
    <%= f.check_box :fresh %>
  </div>
  
  <div class="medium-6 columns">
    <%= f.submit 'Crear Cerebro', class:'hollow button secondary' %>
  </div>
  
</div>
  
<% end %>


<p id="notice"><%= notice %></p>

<div class="field small-15 large-3 columns">
    <%= image_tag(@zombie.avatar_url) if @zombie.avatar? %>
</div>

<p>
  <strong>Nombre:</strong>
  <%= @zombie.name %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @zombie.bio %>
</p>

<p>
  <strong>Edad:</strong>
  <%= @zombie.age %>
</p>

<p>
  <strong>E-Mail:</strong>
  <%= @zombie.email %>
</p>

<p>
  <strong>Podrido:</strong>
  <%= @zombie.rooten ? "SÃ­" : "No" %>
  <!--#%= @zombie.rooten %-->
</p>



<div>
    <h3>Cerebros</h3>
</div>

<div id="brains">
    <%= render :partial => @zombie.brains.reverse %>
</div>

<div>
    <h3>Agregar</h3>
</div>

<%= form_for([@zombie, Brain.new], remote: true) do |f| %>
 
<div class="row">
 
  <div class="field small-15 large-6 columns">
    <%= f.label :flavor %>
    <%= f.text_field :flavor %>
  </div>
  
  <div class="field small-15 large-6 columns">
    <%= f.label :iq %>
    <%= f.number_field :iq %>
  </div>
  
  <div class="field small-15 large-15 columns">
    <%= f.label :fresh %>
    <%= f.check_box :fresh %>
  </div>
  
  <div class="actions small-15 large-15 columns ">
    <%= f.submit 'Crear Cerebro', class:'hollow button success' %>
  </div>
  
</div>
  
<% end %>

